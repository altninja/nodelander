extends layout

block content

    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Please Sign In              
                    .panel-body
                        form(action="/login",method="POST",).form-signin
                            input(type='hidden', name='_csrf', value=_csrf)
                            input.form-control(type='text', name='email', id='email', placeholder='Email Address', required='')
                            input.form-control(type='password', name='password', id='password', placeholder='Password', required='')
                            button.btn.btn-lg.btn-primary.btn-block(type='submit')
                                | Sign In